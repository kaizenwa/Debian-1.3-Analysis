      srcdir = @srcdir@
       VPATH = @srcdir@
       SHELL = /bin/sh
          CC = @CC@
       SLIBS = @LIBS@
     INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
STD_INCLUDES = -I. -I../lib

ACM_OBJECT_LIBRARY = /usr/games/acm/objects/
   PROGRAMS = animate
    DEFINES = -DACM_LIBRARY=\"$(ACM_OBJECT_LIBRARY)\"
     CFLAGS = -O $(DEFINES) @DEFS@ $(STD_INCLUDES)
       SRCS = animate.c app.c
       OBJS = animate.o app.o
       VLIB = ../lib/libV.a

all:	$(PROGRAMS)

animate: $(OBJS) $(VLIB)
	$(CC) $(CFLAGS) -o $@ $(OBJS) $(VLIB) $(SLIBS)

../lib/libV.a:
	cd ../lib; $(MAKE) -e

Makefile: Makefile.in config.status
	$(SHELL) config.status

config.status: configure
	$(SHELL) $(srcdir)/configure --no-create

configure: configure.in
	cd $(srcdir); autoconf

clean:
	rm -f $(PROGRAMS) *.o core

TAGS:	$(SRCS)
	etags $(SRCS)

distclean:
	rm -f Makefile

realclean:	distclean
	rm -f TAGS
