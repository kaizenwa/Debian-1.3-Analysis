# This script installs the game into the ~games directory

        echo Installing GravityWars...
	
        if test -e ~games/GravityWars; then
         rm ~games/GravityWars
	fi

	if test -e ~games/GravityWars101; then
	 rm -r ~games/GravityWars101
	fi
 

	mkdir ~games/GravityWars101
        cp -r data ~games/GravityWars101
        cp -r levels ~games/GravityWars101
        cp GravityWars101 ~games/GravityWars101
	cp GravityWars.script ~games/GravityWars101/GravityWars
        chmod a-rwxs,+rwx,a+rx ~games/GravityWars101/GravityWars
        chmod a-rwx,u+rwxs,a+x ~games/GravityWars101/GravityWars101
        chgrp users ~games/GravityWars101/GravityWars
        chgrp bin ~games/GravityWars101/GravityWars101
        ln -s ~games/GravityWars101/GravityWars ~games/GravityWars

