# colors
xblast.titleColor1:          SpringGreen
xblast.titleColor2:          Cyan
xblast.textBox.lightColor1:  Yellow
xblast.textBox.lightColor2:  Gold
xblast.textBox.darkColor1:   Black
xblast.textBox.darkColor2:   MidnightBlue
