xblast.statusBar.foreground: LightSteelBlue
xblast.statusBar.Background: Black
xblast.explosionColor1:      OrangeRed
xblast.explosionColor2:      LightYellow
xblast.explosionColor3:      White

#
# part two : player setup
#

