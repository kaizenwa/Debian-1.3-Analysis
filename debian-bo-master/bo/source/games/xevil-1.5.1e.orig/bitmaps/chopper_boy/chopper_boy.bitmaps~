Size ChopperBoy::get_size_max() 
{
  Size ret;
  ret.width = 19;
  ret.height = 24;
  return ret;
}



PhysicalP ChopperBoy::create(WorldP w,LocatorP l,const Pos &pos)
{
  PhysicalP ret = new ChopperBoy(w,l,pos);
  assert(ret);
  return ret;
}



