Size Laser::get_size(Dir dir)
{
  return context.movingContext.sizes[dir];
}



Size Laser::get_size_max()
{
  Size size;
  size.width = 30;
  size.height = 30;
  return size;
}



PhysicalP Laser::create(WorldP,LocatorP,const Pos &)
{
  assert(0);
  return NULL;
}



