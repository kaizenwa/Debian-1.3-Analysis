#include "../../utils.h"
#include "../../physical.h"
#include "lancer"
#include "lancer_mask"

Size Lancer::get_size_max() 
{
  Size ret;
  ret.width = 20;
  ret.height = 9;
  return ret;
}



PhysicalP Lancer::create(WorldP w,LocatorP l,const Pos &pos)
{
  PhysicalP ret = new Lancer(w,l,pos);
  assert(ret);
  return ret;
}



GunXdata Lancer::xdata;

