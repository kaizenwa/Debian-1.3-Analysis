{ /** GunContext **/
  35, /* shotTime */
  40, /* ammoInitial */
  50, /* ammoMax */

  { /** WeaponContext **/
    True, /* defaultable */
    { /** ItemContext **/
      True, /* persists */

      { /** FallingContext **/
	{/** MovingContext **/
