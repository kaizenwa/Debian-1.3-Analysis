dnl Process this file with autoconf to produce a configure script.
AC_INIT(automake.in)
dnl we use this for gettext
dnl AC_CONFIG_HEADER(config.h)

PACKAGE=automake
AC_SUBST(PACKAGE)
AC_DEFINE_UNQUOTED(PACKAGE, "$PACKAGE")
VERSION=1.0
AC_SUBST(VERSION)
AC_DEFINE_UNQUOTED(VERSION, "$VERSION")
ALL_LINGUAS=

AC_PROG_MAKE_SET
AC_ARG_PROGRAM
fp_PROG_INSTALL

AC_PATH_PROG(PERL, perl)
if test -z "$PERL"; then
   echo "fatal error: perl not found" 1>&2
   exit 1
fi

dnl
dnl NLS configuration.
dnl

dnl ud_GNU_GETTEXT
dnl AC_LINK_FILES($nls_cv_header_libgt, $nls_cv_header_intl)

dnl
dnl End of NLS configuration.
dnl


AC_OUTPUT([Makefile automake tests/Makefile], [chmod +x automake])
dnl intl/Makefile po/Makefile.in],
dnl [sed -e "/POTFILES =/r po/POTFILES" po/Makefile.in > po/Makefile])
