#!/bin/sh
set -e
if test -f /etc/java-path.conf; then
if grep -q '#-- java-lex begin' /etc/java-path.conf; then
cp /etc/java-path.conf /tmp/$$
sed -e '/#-- java-lex begin/,/#-- java-lex end/d' </tmp/$$ >/etc/java-path.conf
rm /tmp/$$
fi
cat >>/etc/java-path.conf <<EOF
#-- java-lex begin
export CLASSPATH="\$CLASSPATH:/usr/lib/jdk/classes/"
#-- java-lex end
EOF
else
cat >>/etc/java-path.conf <<EOF
#!/bin/bash
# This file contains a list of directories containing java class libraries.
# Please do not modify manually this script.
# Instead, add the directories you want in the variable $CLASSPATH,
# this script will only _add_ new directories, but will keep the ones
# you already set up.

export CLASSPATH="\${CLASSPATH-.}"
#-- java-lex begin
export CLASSPATH="\$CLASSPATH:/usr/lib/jdk/classes/"
#-- java-lex end
EOF
fi
