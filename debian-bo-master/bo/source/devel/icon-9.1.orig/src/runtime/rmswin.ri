   {
   COLORREF cr = crp[(y-crpy) * crpw + (x-crpx)];
   *rv = 1;
   sprintf(s, "%ld,%ld,%ld",
	   (long)RED(cr)*257L, (long)GREEN(cr)*257L, (long)BLUE(cr)*257L);
   return Succeeded;
   }

