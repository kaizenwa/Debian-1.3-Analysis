/*
 * free all Windows resources allocated by this instantiation of iconx
 */
void wfreersc()
{
   while (wstates != NULL) {
      wstates->refcount = 1;
      free_window(wstates);
      }
   while (wcntxts != NULL) {
      wcntxts->refcount = 1;
      free_context(wcntxts);
      }
   if (palette) {
      DeleteObject(palette);
      palette = 0;
      }
}

