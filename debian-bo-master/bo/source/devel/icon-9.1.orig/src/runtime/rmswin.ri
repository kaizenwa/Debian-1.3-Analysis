 */
void fillarcs(wbp wb, XArc *arcs, int narcs) 
   {
   register XArc *arc = arcs;
   int i, diff, bheight;
   HBRUSH hb, oldbrush, oldbrush2;
   POINT pts[3];
   HPEN hp, oldpen, oldpen2;
   STDLOCALS(wb);
