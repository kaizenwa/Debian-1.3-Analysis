wbp w;
SHORT width;
   {
   wsp ws = w->window;
   ws->width = width;
   return Succeeded;
   }

int setgeometry(w, geo)
wbp w;
char *geo;
   {
   wsp ws = w->window;
   int width = 0, height = 0;
   int x = 0, y = 0, status;
   if ((status = parsegeometry(geo, &x, &y, &width, &height)) == 0)
      return Error;
   if (status & 1) {
      ws->width = width;
      ws->height = height;
      }
   if (status & 2) {
      ws->posx = x;
      ws->posy = y;
      }
   return Succeeded;
   }

int setcanvas(w,s)
wbp w;
char *s;
   {
   int cmd;
   wsp ws = w->window;
   HWND stdwin = ws->win;

   if (!strcmp(s, "iconic")) {
      cmd = SW_MINIMIZE;
      CLRTOBEHIDDEN(ws);
      }
   else if (!strcmp(s, "normal")) {
      cmd = SW_RESTORE;
      CLRTOBEHIDDEN(ws);
      }
   else if (!strcmp(s, "maximal")) {
      cmd = SW_SHOWMAXIMIZED;
