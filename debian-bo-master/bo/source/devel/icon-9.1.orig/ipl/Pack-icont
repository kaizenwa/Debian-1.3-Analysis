#!/bin/sh
#
#  Pack-icont -- make one pack component
#
#  usage:  Pack-icont dest-dir source-dir file-to-save ...

set -e

DSTDIR=$1; shift
SRCDIR=$1; shift

echo cd $SRCDIR
     cd $SRCDIR

IPATH="../../ucode"
LPATH="../../incl ../../gincl"
export IPATH
export LPATH

make ICONT=../../../bin/icont IFLAGS=-s

echo cp $* ../../$DSTDIR
     cp $* ../../$DSTDIR

make Clean
