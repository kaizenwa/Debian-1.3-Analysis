#!/bin/sh
if [ x${FCGIDIR} = "x" ]; then
	echo "You need to set the environment varible FCGIDIR to the location of the FCGI development kit"
	exit 1
fi
if [ x${CC} = "x" ]; then
	CC=gcc
fi
if [ x${PERL_PREFIX} = "x" ]; then
	PERL_PREFIX=/usr/local/perl5-fcgi
fi
./Configure -D extralibs=$FCGIDIR/libfcgi/libfcgi.a -D prefix=$PERL_PREFIX -D cc=$CC -D "ccflags=-I$FCGIDIR/include -include $FCGIDIR/include/fcgi_stdio.h" -des
