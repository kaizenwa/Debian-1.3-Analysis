#
# tools for a Cygnus release
#

srcdir = .

GENFILE = Build-A-Release vault-install Pack-A-Progressive PP PE PD

SHELL = /bin/sh

all: $(GENFILE)

$(GENFILE): $(srcdir)/subst-relinfo $(srcdir)/../release-info

info:
dvi:
install:
install-info:
check:
installcheck:

clean mostlyclean:
	rm -rf $(GENFILE) 
distclean maintainer-clean realclean: clean
	rm -f Makefile config.status

% :  %-in
	CC="$(CC)"; export CC; $(srcdir)/subst-relinfo $(srcdir)/../release-info < $< > $@
	chmod a+r $@
	chmod a+x $@

Makefile : $(srcdir)/Makefile.in
	$(SHELL) config.status 
