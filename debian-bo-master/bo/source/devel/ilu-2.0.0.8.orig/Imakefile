/* Last edited by Mike Spreitzer January 13, 1995 2:42 pm PST */

#define IHaveSubdirs

dist::
	rm -f make-tar-file
	co make-tar-file.orig
	sed -e s/RELEASE_NUMBER/$(RELNUM)/g <make-tar-file.orig >make-tar-file
	chmod 555 make-tar-file

#ifdef BUILD_NMS_SUPPORT
 NMSDIR = nms
#endif

#if (defined(ADD_SECURE_TRANSPORT) && defined(USING_ILUGSS))
 GSSDIR = GSS
#endif

/* NB:  The GSS library must be built before the runtime tree, as some of the
   runtimes depend on linking against it. */

SUBDIRS = imake stubbers $(GSSDIR) runtime etc examples doc $(NMSDIR) indexman

DIRS = $(DESTDIR)/include \
	$(DESTDIR)/interfaces \
	$(DESTDIR)/examples \
	$(DESTDIR)/bin \
	$(DESTDIR)/lib \
	$(DESTDIR)/lisp \
	$(DESTDIR)/doc \
	$(DESTDIR)/man \
	$(DESTDIR)/man/man1 \
	$(DESTDIR)/man/man3 \
	$(DESTDIR)/man/man5 \
	$(DESTDIR)/man/man8

MkdirTarget($(DESTDIR) $(DIRS) $(SIMPLE_BIND_DIRECTORY))

