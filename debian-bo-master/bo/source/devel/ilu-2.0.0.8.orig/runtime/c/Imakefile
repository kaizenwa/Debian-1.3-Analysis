ISEC =
#ifdef    ADD_SECURE_TRANSPORT
#ifdef USING_ILUGSS
ISEC = -I../../GSS/kernel
#else
ISEC = $(GSS_INCLUDES)
#endif
#endif

LOCALINCLUDES = -I../kernel ${ISEC}
ILUCINCLUDES =

NormalObjectRule()
 
KERNEL_HEADERS=../kernel/iluxport.h ../kernel/iluconf.h ../kernel/iluerror.h ../kernel/ilubasic.h ../kernel/iluerrs.h

ilu.o: ilu.c iluchdrs.h $(KERNEL_HEADERS)
orb.o: orb.c iluchdrs.h $(KERNEL_HEADERS)

ObjectTarget(ilu.o)
ObjectTarget(orb.o)

OBJS = ilu.o orb.o
 
LibraryTarget(libilu-c.a, $(OBJS))

InstallLibrary(libilu-c.a, $(DESTDIR)/lib)
InstallRO(iluchdrs.h, $(DESTDIR)/include)

all:: libilu-c.a

