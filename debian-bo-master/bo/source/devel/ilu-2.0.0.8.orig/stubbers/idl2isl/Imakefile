#define IHaveSubdirs

PROG	= idl2isl

CFE	= Sun-parser

SUBDIRS	= $(CFE) isl_be

LIBS	= \
	$(CFE)/driver/libdrv.a \
	isl_be/libbe.a \
	$(CFE)/fe/libfe.a \
	$(CFE)/ast/libast.a\
	$(CFE)/util/libutil.a \
	$(CFE)/narrow/libnarrow.a

all:: libs

libs::
	@for i in $(SUBDIRS); do \
		(cd $$i; echo "making" "(`pwd`)"; \
			$(DEFS) $(MAKE) $(MFLAGS)) done

CPlusPlusProgramTarget($(PROG),, $(LIBS),)
InstallProgram($(PROG), $(DESTDIR)/bin)
InstallRO(CORBA.idl, $(DESTDIR)/interfaces)
