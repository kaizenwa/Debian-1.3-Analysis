# IDL_CFE_VERSION	Defines what the current IDL CFE version is
IDL_CFE_VERSION =	\"1.3.0.1\"

LOCALINCLUDES = -I../include -D$(IDL_CFE_OSV) \
	    -DCPP_LOCATION=\"$(IDL_CFE_CPP_DRIVER)\" \
	    -DIDL_CFE_VERSION=$(IDL_CFE_VERSION)

LIB	= libdrv.a

SRCS	= \
	drv_args.cc \
	drv_fork.cc \
	drv_init.cc \
	drv_link.cc \
	drv_main.cc \
	drv_preproc.cc \
	drv_private.cc

OBJS	= $(SRCS:.cc=.o)

libs	: $(LIB)

NormalObjectRule()
LibraryTarget($(LIB), $(OBJS))
