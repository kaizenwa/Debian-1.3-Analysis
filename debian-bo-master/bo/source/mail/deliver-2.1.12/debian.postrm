#!/bin/sh -e
#
# Debian package postrm
# Version 1.1
#
# Robert Leslie <rob@mars.org>

case "$1" in
  remove|upgrade)
    ;;

  purge)
    rm -f /var/log/deliver.{log,errlog}*
    rm -rf /etc/deliver
    ;;

  failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

  *)
    echo "postrm called with unknown argument \`$1'" >&2
    exit 0
    ;;
esac
