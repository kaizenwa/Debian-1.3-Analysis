/*
 * These declarations are dependent on the above configuration options,
 * or are system-independent.  They shouldn't need to be changed, but it
 * is a lot more sensible to define them once here than in all the source
 * files that need them.
 */

/* Handle which string header we include */
#ifdef HAVE_STRING_H
#define STRING_HDR <string.h>
#else /* ! HAVE_STRING_H */
#define STRING_HDR <strings.h>
#ifndef strchr
#define strchr(s, c) index(s, c)
#endif /* ! strchr */
#ifndef strrchr
#define strrchr(s, c) rindex(s, c)
#endif /* ! strrchr */
#endif /* ! HAVE_STRING_H */

/* Handle the directory handling inclusions */
#ifdef HAVE_DIRENT_H
#define DIR_HDR <dirent.h>
#else /* ! HAVE_DIRENT_H */
#define dirent direct
#ifdef HAVE_SYS_NDIR_H
#define DIR_HDR <sys/ndir.h>
#endif /* HAVE_SYSN_DIR_H */
#ifdef HAVE_SYS_DIR_H
#define DIR_HDR <sys/dir.h>
#endif /* HAVE_SYS_DIR_H */
#ifdef HAVE_NDIR_H
#define DIR_HDR <ndir.h>
#endif /* HAVE_NDIR_H */
#endif /* ! DIRENT */

/* Handle the header file for struct tm */
#ifdef TM_IN_SYS_TIME
#define TIME_HDR <sys/time.h>
#else /* ! TM_IN_SYS_TIME */
#define TIME_HDR <time.h>
#endif /* ! TM_IN_SYS_TIME */

/* Ensure that TERMIO gets defined if TERMIOS is */
#ifdef HAVE_TERMIOS
#ifndef HAVE_TERMIO
#define HAVE_TERMIO 1
#endif /* ! HAVE_TERMIO */
#endif /* HAVE_TERMIOS */

/* How to get the return and signal parts of a system return value */
#define RETURNVAL(x) (((x) & 0xff00) ? ((x) >> 8) : (x))
#define RETURNSIG(x) ((x) & 0x00ff)

/*
 * The fatal system return values.  This only works with POSIX
 * shells, but there's no way to detect a fatal error in a
 * traditional shell, so this is the best we can do.
 */
#define FATAL_RETURN 127
#define FATAL_RETURN_MASK 0x7e00
#define RETURNFATAL(x) (((x) & FATAL_RETURN_MASK) == FATAL_RETURN_MASK)

