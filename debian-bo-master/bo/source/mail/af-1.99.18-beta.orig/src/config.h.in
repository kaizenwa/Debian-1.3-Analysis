/****************************************************************************/
/* Mail transport agent (MTA) configuration */

/*
 * The command line to deliver mail.  Likely to be one of the following:
 *
 *		/bin/rmail
 *		/bin/smail
 *		/etc/delivermail -i -em
 *		/usr/lib/sendmail -oi -t
 *		/usr/mmdf/submit -mrxto,cc*
 */
#undef MTA

/* You are using direct SMTP submission to send mail */
#undef MTA_IS_SMTP

/* The default host for submitting mail via SMTP */
#undef DEFAULT_SMTP_HOST

/* You are using MMDF format mailboxes */
#undef MTA_MMDF_FORMAT

/* You are using Content-Length: headers */
#undef MTA_CONTENT_LENGTH

/* Your MTA only accepts 'From ' after a blank line */
#undef MTA_BLANK_SEPARATED

/* The MTA needs the destinations separate from the message headers */
#undef MTA_NEEDS_ARGS

/* Your MTA requires destinations to be UUCP paths */
#undef MTA_NEEDS_UUCP

/* You've set MTA_NEEDS_ARGS and the MTA doesn't handle Cc: and Bcc: */
#undef NO_MTA_CC

/* The MTA doesn't add valid Date: headers */
#undef NO_MTA_DATE

/* The MTA doesn't add Message-Id: headers */
#undef NO_MTA_ID

/* The MTA doesn't use Resent- headers before normal ones */
#undef NO_MTA_RESENT

/* Your MTA won't handle RFC 822 groups */
#undef NO_MTA_GROUPS

/* Should af read remote mailboxes using POP3? */
#undef READ_VIA_POP3

/* A default host for picking up user's POP3 mailboxes */
#undef DEFAULT_POP3_HOST

/* The name of a mailfile in the user's home directory tree */
#undef DEFAULT_MAILFILE

/* The location of the mail spool directory */
#undef MAILDIR

/* How to determine if a file is an incoming mailbox */
#ifdef MAILDIR
#define MAILBOX(x) (!strncmp(x, MAILDIR, strlen(MAILDIR)))
#else /* ! DEFAULT_MAILFILE */
#define MAILBOX(x) FALSE
#endif /* ! DEFAULT_MAILFILE */

/* How to determine if a folder is a POP3 mailbox */
#define POP3_MBOX(x) (*(x) == ':')

/* The string that delimits MMDF messages */
#define MMDF_DELIM "\001\001\001\001\n"

/* The delimiter used between messages in a mail digest */
#define DIGEST_DELIM	"--"

