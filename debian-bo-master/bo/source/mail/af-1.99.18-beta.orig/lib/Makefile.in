##############################################################################
# Required programs
SHELL=/bin/sh

# Compiler options
CC=@CC@
CFLAGS=@CFLAGS@ @LIBDEFS@
LINT=lint
LINTFLAGS=-Dlint @LIBDEFS@
AR=ar
ARFLAGS=r
RANLIB=@RANLIB@

# The files generated by configure
CONFIG=Makefile

# What we must make
LIBAF=libaf.a

# Sources for the library functions
SRC=regex.c casefunc.c dup2.c getcwd.c getopt.c \
killpg.c memcpy.c psignal.c setpgid.c strcase.c \
strdup.c strerror.c tempnam.c

# And the required objects
OBJ=regex.o casefunc.o @LIBOBJS@

# How to make it
all: $(LIBAF)

$(LIBAF): $(OBJ)
	$(AR) $(ARFLAGS) $(LIBAF) $(OBJ)
	$(RANLIB) $(LIBAF)

lint:
	$(LINT) $(LINTFLAGS) $(SRC)

clean:
	rm -f $(OBJ) $(LIBAF)

distclean: clean
	rm -f $(CONFIG)

# Module-specific dependencies
regex.o:	regex.h
psignal.o:	psignal.h
