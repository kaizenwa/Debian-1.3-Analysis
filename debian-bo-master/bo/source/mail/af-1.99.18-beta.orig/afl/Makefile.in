##############################################################################
# Where do things go?
LIBDIR=@LIBDIR@

# Required programs
SHELL=/bin/sh
INSTALL=@INSTALL@
INSTALLDIR=../install.sh

# Install options
DIRINSTOPTS=@IDIROPTS@
AFLINSTOPTS=@IDOCOPTS@

# The files generated by Configure
CONFIG=Makefile

# What we must make.
AFL=ansi.afl elm.afl more.afl mush.afl mutt.afl pine.afl ream.afl vm.afl

# How to make it
all: $(AFL)

install: all
	$(INSTALLDIR) $(DIRINSTOPTS) $(LIBDIR)
	$(INSTALL) $(AFLINSTOPTS) $(AFL) $(LIBDIR)

distclean:
	rm -f $(CONFIG)
