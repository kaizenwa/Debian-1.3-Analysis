# ./Make.common.in	 -*- Makefile -*-

# LSM date, release date (man pages), version number
DATE="23 January 1997"#
LSMDATE=23JAN97#
VERSION=2.20#
VERNAME=rxvt-$(VERSION)#
# MAINT=An orphaned piece of software as of 22 Jan 1997.# current maintainer
MAINT="mj olesen <olesen@me.queensu.ca> \
but thesis first!/will someone else volunteer?"
# current maintainer
srcdir = @srcdir@
VPATH  = @srcdir@

SHELL = /bin/sh

# This variable makes it possible to move the installation root to another
# directory. This is useful when you're creating a binary distribution
# If empty, normal root will be used.
# You can run eg. 'make install DESTDIR=/packages/rxvt-xx' to accomplish
# that.
# DESTDIR = /usr/local/X11/$(VERNAME)

# Installation target directories & other installation stuff
prefix = @prefix@
exec_prefix = @exec_prefix@
binprefix =
manprefix =
bindir = @bindir@
mandir = @mandir@/man1
manext = 1

# Tools & program stuff
CC = @CC@
CPP = @CPP@
RM = @RM@
RMF = @RM@ -f
CP = @CP@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL@ -s -m 755
INSTALL_DATA = @INSTALL@ -m 644

# Flags & libs
# add -DBINDIR=\""$(bindir)/"\" to CPPFLAGS, if we need to spawn a program

CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@ #-DHAVE_LIBXPM
LDFLAGS = @LDFLAGS@
DEFS = @DEFS@
LIBS = @LIBS@

# X Include directory
XINC = @X_CFLAGS@ #-I/usr/local/include

# extra libraries needed by X on some systems, X library location
XLIB = @X_LIBS@ @X_PRE_LIBS@ -lX11 @X_EXTRA_LIBS@ #-L/usr/local/lib -lXpm

# End of Make.common
