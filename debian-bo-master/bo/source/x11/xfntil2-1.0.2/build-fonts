#!/bin/bash

DIRS100DPI="set-3/100dpi set-4/100dpi-2"
DIRS75DPI="set-3/75dpi set-4/75dpi-2 set-2"
DIRSMISC="set-1"

TMPDIRS="100dpi 75dpi misc"

for I in $TMPDIRS; do
  if [ ! -d $I ]; then
    mkdir $I
  fi
done

for I in $DIRS100DPI; do
  ln $I/*.bdf 100dpi
done
for I in $DIRS75DPI; do
  ln $I/*.bdf 75dpi
done
for I in $DIRSMISC; do
  ln $I/*.bdf misc
done

for I in $TMPDIRS; do
  for J in $I/*.bdf; do
    bdftopcf -o ${J%bdf}pcf $J
  done
  compress $I/*.pcf
done

