dnl Process this file with autoconf to produce a configure script.
AC_INIT(configure)
dnl Organize the search for common prefixes
if test x$prefix = xNONE
then
    prefix=$ac_default_prefix
fi
if test "$prefix" = "/usr"
then
    altprefix=/usr/local
else
    altprefix=/usr
fi
dnl We need a BSD-like install.
AC_PROG_INSTALL
AC_PROG_CC
AC_PROG_RANLIB
AC_PROG_LN_S
AC_PROG_MAKE_SET
dnl Check for Linux ELF
AC_CANONICAL_HOST
case "$host" in
    *linux)
	shared=shared
	SHAREDCFLAGS=-fPIC
	;;
esac
AC_SUBST(shared)
AC_SUBST(SHAREDCFLAGS)
dnl Output our files.
AC_OUTPUT(Makefile lib/Makefile src/Makefile)

