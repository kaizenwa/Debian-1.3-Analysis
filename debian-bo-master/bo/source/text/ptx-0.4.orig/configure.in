# Process this file with autoconf to produce a configure script.

AC_INIT(ptx.c)
AC_CONFIG_HEADER(config.h)
AC_ARG_PROGRAM

PRODUCT=ptx
VERSION=0.4
AC_DEFINE_UNQUOTED(PRODUCT, "$PRODUCT")
AC_DEFINE_UNQUOTED(VERSION, "$VERSION")
AC_SUBST(PRODUCT)
AC_SUBST(VERSION)

AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_RANLIB

AC_AIX
AC_ISC_POSIX
AC_MINIX
AC_C_CROSS
if test $cross_compiling = no; then
  AC_C_CHAR_UNSIGNED
fi
fp_C_PROTOTYPES
AC_C_CONST

AC_CHECK_HEADERS(string.h)
AC_HEADER_STDC

AC_CHECK_FUNCS(setchrclass strerror)
AC_FUNC_ALLOCA
AC_FUNC_VPRINTF

fp_WITH_DMALLOC

AC_OUTPUT(Makefile,
[test -z "$CONFIG_HEADERS" || date > stamp-h])
