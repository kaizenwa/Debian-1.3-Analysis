dnl Process this file with autoconf to produce a configure script.
AC_INIT(configure)
dnl Organize the search for common prefixes
if test x$prefix = xNONE
then
    prefix=$ac_default_prefix
fi
if test "$prefix" = "/usr"
then
    altprefix=/usr/local
else
    altprefix=/usr
fi
dnl Select the ppddir
AC_CANONICAL_HOST
case "$host" in
    *nextstep*)
        nextstep=1
	;;
    *)
        nextstep=0
	;;
esac
case "$prefix" in
    /usr/local|/usr/local/*)
        nsdatadir=/LocalLibrary/PrinterTypes
	;;
    /usr|/usr/*)
	nsdatadir=/NextLibrary/PrinterTypes
	;;
    *)
	nsdatadir=$HOME/Library/PrinterTypes
	;;
esac
uxdatadir=$datadir/ppd
if test $nextstep -eq 1
then
    datadir=$nsdatadir
else
    datadir=$uxdatadir
fi
AC_SUBST(nsdatadir)
AC_SUBST(uxdatadir)
dnl We need a BSD-like install.
AC_PROG_INSTALL
dnl Output our files.
AC_OUTPUT(Makefile)

