package=perlsgml

build:
	$(checkdir)
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtd2html \
	    > dtd2html.deb
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtddiff \
	    > dtddiff.deb
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtdtree \
	    > dtdtree.deb
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtdview \
	    > dtdview.deb
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' stripsgml \
	    > stripsgml.deb
	touch build

clean:
	$(checkdir)
	-rm -f *.deb
	-rm -f build
	-make clean
	-rm `find . -name "*~"`
	-rm -rf debian/tmp debian/files* core debian/substvars

binary-indep:	checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:	checkroot build
	$(checkdir)
	-rm -rf debian/tmp
	install -d debian/tmp
	cd debian/tmp;install -d `cat ../dirs`
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtd2html \
	    > debian/tmp/usr/bin/dtd2html
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtddiff \
	    > debian/tmp/usr/bin/dtddiff
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtdtree \
	    > debian/tmp/usr/bin/dtdtree
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' dtdview \
	    > debian/tmp/usr/bin/dtdview
	sed -e 's/usr\/local\/bin\/perl/usr\/bin\/perl/' stripsgml \
	    > debian/tmp/usr/bin/stripsgml
	chmod 755 debian/tmp/usr/bin/*
	chown root.root debian/tmp/usr/bin/*
	cp lib/* debian/tmp/usr/lib/perl5
	chmod 444 debian/tmp/usr/lib/perl5/*
	chown root.root debian/tmp/usr/lib/perl5/*
	cp -a doc/*.html debian/tmp/usr/doc/perlsgml
	chmod 644 debian/tmp/usr/doc/perlsgml/*
	chown root.root debian/tmp/usr/doc/perlsgml/*
# Must have debmake installed for this to work. Otherwise please copy
# /usr/bin/debstd into the debian directory and change debstd to debian/debstd
	debstd README.1ST  CHANGES: dtd2html.CHG dtd_pl.CHG dtddiff.CHG 
	dpkg-gencontrol
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

# Below here is fairly generic really

binary:		binary-indep binary-arch

source diff:
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
