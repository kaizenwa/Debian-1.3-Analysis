	intra		NAMES	#IMPLIED
	   -- lextype(("E"|"I"|"A"|"N"|"P"), (s+, ("E"|"I"|"A"|"N"|"P"))*) --
	aggtrav		NAMES	agg
	   -- lextype (("agg"|"mem"|"cor"), (s+, ("agg"|"mem"|"cor"))*) --

	context	(context|ncontext) ncontext

  -- OSF DTD value added attributes: --

	%common-attr;		#REQUIRED
