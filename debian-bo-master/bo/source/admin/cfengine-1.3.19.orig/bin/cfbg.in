#!@PERL@
#
# Place the command on the remainder of the line
# into the background, to avoid blocking cfengine.
# Must discard output...

$command = join(" ",@ARGV);
$outputfile = "/tmp/cfbg.out";

 #
 # Perl forks child from here onwards
 #

if (!fork())
   {
   exit 0;
   }

 system "$command >> $outputfile 2>&1";

