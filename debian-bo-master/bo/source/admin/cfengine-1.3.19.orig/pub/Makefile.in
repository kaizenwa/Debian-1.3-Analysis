srcdir = @srcdir@
VPATH = @srcdir@

OBJ = getopt.o    \
      getopt1.o   \
      full-write.o\
      regex.o     \
      md5.o       \
      md5c.o

SCI_CC = -cckr

CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
DEFS = @DEFS@
AR = ar
RANLIB = @RANLIB@

RM = rm -f

#
# Note that if you are compiling with gcc -- you will almost certainly
# need the ADDITIONAL CFLAGS  -w
#
# On solaris, you can remove the -w flag is you're not using the
# GNU compiler
#


#####################################################################
# Rules
######################################################################

all: libpub.a

install: all
	@echo "Nothing to install"

libpub.a: ${OBJ}
	${AR} cru $@ ${OBJ}
	-${RANLIB} $@

clean:
	${RM} ${OBJ}
	${RM} libpub.a

distclean: clean
	${RM} Makefile

.c.o: 
	${CC} -c ${CPPFLAGS} ${CFLAGS} ${DEFS} $<

