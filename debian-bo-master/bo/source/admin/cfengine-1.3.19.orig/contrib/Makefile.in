################################################################
#	Makefile for CFEngine's contrib directory
################################################################

prefix = @prefix@
exec_prefix = @exec_prefix@

VPATH = @srcdir@

bindir = @bindir@
sbindir = @sbindir@
datadir = @datadir@

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@

MKINSTALLDIR = @top_srcdir@/bin/mkinstalldirs

PERL = @PERL@
SCRIPTS = cfdoc

RM = rm -f

all: ${SCRIPTS}
	@echo "All scripts built"

install: ${SCRIPTS}
	${MKINSTALLDIR} ${sbindir}
	for x in $?; \
	do \
	${INSTALL_PROGRAM} $$x ${sbindir}; \
	done

clean:
	@echo "Nothing to clean"

distclean: clean
	$(RM) Makefile
