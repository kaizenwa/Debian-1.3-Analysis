################################################################
#	Master Makefile for CFEngine
################################################################

#
# To help in understanding the setup according to 'configure'
#
bindir = @bindir@
configure_input = @configure_input@
datadir = @datadir@
exec_prefix = @exec_prefix@
includedir = @includedir@
infodir = @infodir@
libdir = @libdir@
libexecdir = @libexecdir@
localstatedir = @localstatedir@
mandir = @mandir@
oldincludedir = @oldincludedir@
prefix = @prefix@
sbindir = @sbindir@
sharedstatedir = @sharedstatedir@
srcdir = @srcdir@
sysconfdir = @sysconfdir@
top_srcdir = @top_srcdir@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
CXXFLAGS = @CXXFLAGS@
DEFS = @DEFS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@


srcdir = @srcdir@

#
# Files in this directory to clean up for distribution (etc.)
#
RM = rm -f
RMFILES = Makefile config.cache config.status config.log

all:
	(cd pub;	$(MAKE) all)
	(cd src;	$(MAKE) all)
	(cd bin;	$(MAKE) all)
	(cd inputs;	$(MAKE) all)
	(cd contrib;	$(MAKE) all)
	(cd doc;	$(MAKE) all)

install:
	(cd pub;	$(MAKE) install)
	(cd src;	$(MAKE) install)
	(cd bin;	$(MAKE) install)
	(cd inputs;	$(MAKE) install)
	(cd contrib;	$(MAKE) install)
	(cd doc;	$(MAKE) install)

distclean: clean
	(cd pub;	$(MAKE) distclean)
	(cd src;	$(MAKE) distclean)
	(cd bin;	$(MAKE) distclean)
	(cd inputs;	$(MAKE) distclean)
	(cd contrib;	$(MAKE) distclean)
	(cd doc;	$(MAKE) distclean)

clean:
	$(RM) $(RMFILES) *~

distdoc:
	(cd doc; make dist)

dist: distdoc distclean
	(cd bin; MakeDist)
