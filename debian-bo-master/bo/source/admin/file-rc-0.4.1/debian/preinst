#!/bin/sh
set -e
if [ install = "$1" ]; then
	cp /etc/init.d/rc /var/backups/rc.symlink
elif [ upgrade = "$1" ]; then
	cp -f /etc/init.d/rc /usr/lib/file-rc/rc
	for i in runlevel.fallback runlevel.conf; do
		sed -e 's/\([0-9][0-9]	-\)[	]\+\(\/etc\/init.d\)/\1	-		\2/g' \
			/etc/$i > /tmp/$i
		if ! cmp -s /etc/$i /tmp/$i; then
			mv /tmp/$i /etc/$i
			echo Corrected problem in /etc/$i.
		else
			rm -f /tmp/$i
		fi
	done
fi
