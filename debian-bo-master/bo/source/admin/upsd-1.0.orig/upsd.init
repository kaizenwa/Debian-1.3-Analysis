#!/bin/sh

# Source function library.
. /etc/rc.d/init.d/functions

# See how we were called.
case "$1" in
  start)
	echo -n "Starting UPS services: "
	daemon upsd /dev/ttyS0
	echo
	;;
  stop)
	echo -n "Shutting down UPS services: "
	killproc upsd
	echo ""
	;;
  *)
	echo "Usage: upsd.init {start|stop}"
	exit 1
esac

