#This file tells /usr/bin/install-fvwmgenmenu how  and where the 
#different window managers like to have there menufiles.
#
#The first line in each section is the name of the window manager.
#(If install-fvwmgenmenu is called from the link /etc/menu-methods/fvwm2,
#install-fvwmgenmenu knows it's to pretend to be the fvwm2 installer,
#and uses the fvwm2 section).
#
#Next, there are:
#  compat   : kind of menu-files to be generated (now only fvwm/fvwm2)
#  supported: the supported "types" for this windowmanger
#             (and the corresponding wrapper files),
#             The most prefered type is listed first, the least preferred
#	      type last (so, if both a text and x11 entry are available,
#	      fvwm2 preferrs the x11 entry (in the file below)).
#  database:  The database of menuentries (from previous runs)
#  mainmenu:  The file in which the fvwm2 main-menus are stored(now only fvwm2)
#  genmenu:   The general menu-file for the window-manager.
#  rcfile:    The "system.*rc" file (if the window manager doesn't support
#             "include", or "read")
#  examplercfile: the input rc file, see above.
#  rootprefix:In generating the complete path of the filenames (exept the
#             wrapperfiles), use this prefix if run as root.
#  userprefix:if run as user.
#  input2prefix: If reading input files, first try root/userprefix, but
#              if that file doesn't exist, try input2prefix
#
fvwm2
  compat: fvwm2
  supported 
    fvwm2module:"/etc/X11/fvwm2/fvwm2module2wrap"
    fvwmodule:  "/etc/X11/fvwm2/fvwm2modulewrap"
    wm:         "/etc/X11/fvwm2/fvwm2wmwrap"
    x11.fvwm2:  "/etc/X11/fvwm2/fvwm2x11fvwm2wrap"
    x11:        "/etc/X11/fvwm2/fvwm2x11wrap"
    text:	"/etc/X11/fvwm2/fvwm2textwrap"as
  endsupported
  database:"menus.dat"
  mainmenu:"main-menu.hook"
  genmenu: "menudefs.hook"
  rootprefix:"/etc/X11/fvwm2/"
  userprefix:"/.fvwm2"
endmanager
fvwm
  compat:fvwm
  supported 
    fvwmodule:  "/etc/X11/fvwm/fvwmmodulewrap"
    wm:         "/etc/X11/fvwm/fvwmwmwrap"
    x11.fvwm:	"/etc/X11/fvwm/fvwmx11fvwmwrap"
    x11:        "/etc/X11/fvwm/fvwmx11wrap"
    text:	"/etc/X11/fvwm/fvwmtextwrap"as
  endsupported
  database:  "menus.dat"
  genmenu:   "menudefs.hook"
  rootprefix:"/etc/X11/fvwm/"
  userprefix:"/.fvwm"
endmanager
fvwm95
  compat:fvwm
  supported 
    fvwmodule:  "/etc/X11/fvwm95/fvwmmodulewrap"
    wm:         "/etc/X11/fvwm95/fvwmwmwrap"
    x11.fvwm95: "/etc/X11/fvwm95/fvwmx11fvwm95wrap"
    x11:        "/etc/X11/fvwm95/fvwmx11wrap"
    text:	"/etc/X11/fvwm95/fvwmtextwrap"as
  endsupported
  database:     "menus.dat"
  genmenu:      "menudefs.hook"
  rcfile:       "system.fvwm95rc"
  examplercfile:"system.fvwm95-menu"
  rootprefix:"/etc/X11/fvwm2/"
  userprefix:"/.fvwm2"
endmanager
afterstep
  compat:fvwm
  supported 
    fvwmodule:  "/etc/X11/afterstep/fvwmmodulewrap"
    wm:         "/etc/X11/afterstep/fvwmwmwrap"
    x11.afterstep:"/etc/X11/afterstep/fvwmx11afterstepwrap"
    x11:        "/etc/X11/afterstep/fvwmx11wrap"
    text:	"/etc/X11/afterstep/fvwmtextwrap"
  endsupported
  database:     "menus.dat"
  genmenu:      "menudefs.hook"
  rcfile:       "system.steprc"
  examplercfile:"system.steprc-menu"
  rootprefix:"/etc/X11/step/"
  userprefix:"/.step/"
endmanager

