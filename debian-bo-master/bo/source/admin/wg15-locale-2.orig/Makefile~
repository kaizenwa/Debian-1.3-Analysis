subdir := localedata

all: # Make this the default target; it will be defined in Rules.

# Get $(version) defined.
include ../Makeconfig
-include $(common-objpfx)version.mk

# List with all available character set descriptions.
charmaps = $(filter-out charmaps/CHECKSUMS, $(wildcard charmaps/*))

# List with all available character set descriptions.
locales = $(filter-out locales/CHECKSUMS, $(wildcard locales/*))

# Pattern for where locale description % gets installed.
i18nfiles-installed = $(i18ndir)/%

# Files to install: a $(domainname).mo file for each language.
install-others = $(charmaps:%=$(i18nfiles-installed)) \
		 $(locales:%=$(i18nfiles-installed))

include ../Rules

# Install the message object files as libc.po in the language directory.
$(i18nfiles-installed): %; $(do-install)
