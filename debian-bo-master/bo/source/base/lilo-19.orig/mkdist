#!/bin/sh
VERSION=`cat VERSION`
DISTDIR=/home/almesber/l/arch
cd ..
tar cvf - \
  lilo/README lilo/INCOMPAT lilo/CHANGES lilo/COPYING lilo/TODO lilo/VERSION \
  lilo/QuickInst lilo/lilo.$VERSION.lsm \
  lilo/Makefile lilo/*.h lilo/*.c lilo/*.S lilo/dparam.s \
  lilo/mkdist \
  lilo/doc/README \
  lilo/doc/Makefile lilo/doc/*.tex lilo/doc/*.fig \
  lilo/doc/fullpage.sty lilo/doc/rlatex lilo/doc/t2a.pl |
  gzip -9 >$DISTDIR/lilo.$VERSION.tar.gz
