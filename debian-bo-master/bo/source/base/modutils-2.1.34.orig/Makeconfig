SBINDIR = /sbin
MANDIR = /usr/man

CC = gcc
CXX = g++
CFLAGS = -O2 -Wall
LDFLAGS =
DEFS = -I../include -D_GNU_SOURCE

# Uncomment this on an alpha using binutils < 2.7.0.9.
#DEFS += -DAXP_BROKEN_GAS

RANLIB = ranlib
INSTALL = install

ARCH = $(shell uname -m | sed s/i.86/i386/)

#----------------------------------------------------------------------

%.o: %.c
	$(CC) $(CFLAGS) $(DEFS) -c -o $@ $<

%.o: %.cc
	$(CXX) $(CFLAGS) $(DEFS) -c -o $@ $<
