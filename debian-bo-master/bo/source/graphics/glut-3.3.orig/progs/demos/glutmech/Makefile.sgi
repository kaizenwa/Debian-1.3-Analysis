OBJECT_STYLE=32
include $(ROOT)/usr/include/make/commondefs

TOP = ../../..

LN = ln -s
MV = mv
RM = -rm -rf

TARGETS = glutmech

GLUT = $(TOP)/lib/glut/libglut.a
LLDLIBS = $(GLUT) -lGLU -lGL -lXmu -lXext -lX11 -lm

SRCS =	glutmech.c
OBJS =	$(SRCS:.c=.o)

LCOPTS = -I$(TOP) -fullwarn
LWOFF = ,813,852,827,826
LDIRT = *~ *.bak *.pure

default : $(TARGETS)

glutmech : $(OBJS) $(GLUT)
	$(CC) -o $@ $(OBJS) $(LDFLAGS)

include $(COMMONRULES)
