include $(ROOT)/usr/include/make/commondefs

TOP = ../../..

LN = ln -s
MV = mv
RM = -rm -rf

TARGETS = walker

LLDLIBS = -lglut -lGLU -lGL -lXmu -lXext -lX11 -lm

SRCS =	models.c walker.c walkviewer.c
OBJS =	$(SRCS:.c=.o)

LCOPTS = -fullwarn -wlint,-f -woff 813,852,827,826 -I$(TOP)
LDIRT = *~ *.bak *.pure

default : $(TARGETS)

walker : $(OBJS) $(GLUT)
	$(CC) -o $@ $(CFLAGS) $(OBJS) $(LDLIBS)

include $(COMMONRULES)
