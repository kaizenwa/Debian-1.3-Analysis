DB=users
install:
	install -d $(DESTDIR)/usr/lib/picon/$(DB)
	-cp -r * $(DESTDIR)/usr/lib/picon/$(DB)
	-rm $(DESTDIR)/usr/lib/picon/$(DB)/README
	-rm $(DESTDIR)/usr/lib/picon/$(DB)/FAQ
	-rm $(DESTDIR)/usr/lib/picon/$(DB)/Makefile
	-rm $(DESTDIR)/usr/lib/picon/$(DB)/build
	-rm -r $(DESTDIR)/usr/lib/picon/$(DB)/debian


