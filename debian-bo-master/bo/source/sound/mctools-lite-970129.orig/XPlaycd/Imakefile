# Imakefile for xplaycd & xmdb
#

###############################################################################
#
# No user servicable parts below
#

#include "../config.h"
#include "local.h"

SRCS1		=	xplaycd.c icons.c hardware.c cd.c volume.c discid.c\
			xpedit.c
OBJS1		=	xplaycd.o icons.o hardware.o cd.o volume.o discid.o\
			xpedit.o
MSGS1		=	de.xplaycd.mo

SRCS2		=	xmdb.c getdir.c xmedit.c mover.c newdir.c
OBJS2		=	xmdb.o getdir.o xmedit.o mover.o newdir.o
MSGS2		=	de.xmdb.mo

EXTRA_INCLUDES  =	-I..
LOCAL_LIBRARIES	=	MCTOOL_LIBRARIES
DEPLIBS		=	$(DEPXLIB)

PROGRAMS	=	xplaycd xmdb

ComplexProgramTarget_1(xplaycd,$(LOCAL_LIBRARIES),$(LOCAL_LIBRARIES))

InstallTarget(install,XPlaycd,,$(XAPPLOADDIR))

ComplexProgramTarget_2(xmdb,$(LOCAL_LIBRARIES),$(LOCAL_LIBRARIES))

InstallTarget(install,XMdb,,$(XAPPLOADDIR))

McInstallMessageTarget($(MSGS1),XPlaycd)

McInstallMessageTarget($(MSGS2),XMdb)
