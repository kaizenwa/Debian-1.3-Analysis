#! /usr/bin/make -f
#
# Last updated: Sat Dec 17 10:52:20 EST 1994 by imurdock.
#
# To make the binary distribution package, the ``Debianized'' source package
# and the context diff to the original package, type `./debian.rules dist'.
# Make sure that `debian.rules' is executable before the final distribution
# is made.
#
# Invoke each target with `./debian.rules <target>'.  All targets should be
# invoked with the package root as the current directory.
#
# The `binary' target must be run as root, as it needs to install files with
# specific ownerships.  The `diff' target assumes that you have the original
# source package available, unpacked, in ../$(p)-$(v).orig, or that you have
# the previous revision of the ``Debianized'' source package and context diff
# in the parent directory.

CC = gcc
CFLAGS = -O2 -D__USE_BSD_SIGNAL
LDFLAGS = -s

# The name of the package (for example, `emacs').
p = nas
# The version of the package (for example, `19.28').
v = 1.2p4
# The Debian revision of the package (for example, `2').
d = 1

dir = `pwd`
architecture = $(shell dpkg --print-architecture)

build:
# Builds the binary package.
	xmkmf -a
	make CC="$(CC)" CDEBUGFLAGS="$(CFLAGS)" LDFLAGS="$(LDFLAGS)"
	touch stamp-build

clean:
# Undoes the effect of `make -f debian.rules build'.
	-make clean
	# All Makefiles are created by `xmkmf -a', so we remove them
	# via `find' in this target.  IMPORTANT: This may not always
	# be the case in all packages!
	find . -name Makefile -exec rm -f {} \;
	rm -f stamp-build
	rm -rf debian-tmp

binary:
# Makes a binary package.
	test -f stamp-build || make -f debian.rules build
	install -d -g root -m 755 -o root $(dir)/debian-tmp
	chmod g-s $(dir)/debian-tmp
	install -d -g root -m 755 -o root $(dir)/debian-tmp/DEBIAN
	make install DESTDIR=$(dir)/debian-tmp
	make install.man DESTDIR=$(dir)/debian-tmp
	install -d -g root -m 755 -o root $(dir)/debian-tmp/etc/init.d
	install -g root -m 755 -o root rc.nas $(dir)/debian-tmp/etc/init.d/nas
	chmod -R g-sw $(dir)/debian-tmp
	chmod -R u+w $(dir)/debian-tmp
	chown -R root.root $(dir)/debian-tmp
	install -d -g root -m 755 -o root $(dir)/debian-tmp/usr/doc/copyright
	install -g root -m 644 -o root debian.README \
	  $(dir)/debian-tmp/usr/doc/copyright/$(p)
	sed -e 's/=V/$(v)-$(d)/' -e 's/=A/$(architecture)/' \
	  debian.control > $(dir)/debian-tmp/DEBIAN/control
	chmod 644 $(dir)/debian-tmp/DEBIAN/control
	install -g root -m 644 -o root debian.conffiles \
	  debian-tmp/DEBIAN/conffiles
	install -g root -m 755 -o root debian.postinst \
	  debian-tmp/DEBIAN/postinst
	install -g root -m 755 -o root debian.postrm \
	  debian-tmp/DEBIAN/postrm
	dpkg --build debian-tmp && dpkg-name -s .. debian-tmp.deb

source:
# Makes a source package.
	-test -f stamp-build && make -f debian.rules clean
	( cd .. && tar cf - $(p)-$(v) | gzip -9f > $(p)-$(v)-$(d).tar.gz )

diff:
# Makes a context diff.
	-test -f stamp-build && make -f debian.rules clean
	-test -d ../$(p)-$(v).orig -o -f ../$(p)-$(v)-`expr $(d) - 1`.diff.gz \
	  || ( echo "Original source package is not available." ; false )
	-test -d ../$(p)-$(v).orig || make -f debian.rules orig
	( cd .. && diff -cNr $(p)-$(v).orig $(p)-$(v) | gzip -9f \
	  > $(p)-$(v)-$(d).diff.gz )
	-test -f stamp-orig \
	  && rm -rf ../$(p)-$(v).orig && rm -f stamp-orig

dist: source diff binary
# Prepares the package for distribution.

orig:
# Prepares the original package from the previous
# Debian revision source package and context diff.
	( cd .. \
	  && mkdir $(p).orig \
	  && cd $(p).orig \
	  && tar xzf ../$(p)-$(v)-`expr $(d) - 1`.tar.gz \
	  && cd $(p)-$(v) \
	  && ( zcat ../../$(p)-$(v)-`expr $(d) - 1`.diff.gz \
	    | patch -sER -p1 ) \
	  && find . -name "*.orig" -exec rm -f {} \; \
	  && cd .. \
	  && mv $(p)-$(v) ../$(p)-$(v).orig \
	  && cd .. \
	  && rmdir $(p).orig )
	touch stamp-orig
