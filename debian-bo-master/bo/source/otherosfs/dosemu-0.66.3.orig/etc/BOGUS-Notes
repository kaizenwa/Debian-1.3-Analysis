if [ ! -e $BUILDDIR ]; then mkdir -p $BUILDDIR; fi
cd $BUILDDIR
rm -rf $NAME$VERSION $NAME-$VERSION
tar xvzf $SRCTARDIR/$TARFILE
mv dosemu0.53.53 $NAME-$VERSION
cd $NAME-$VERSION
# exit

zcat $SRCTARDIR/$PATCHFILE1 | patch -s -p1
zcat $SRCTARDIR/$PATCHFILE2 | patch -s -p1
zcat $SRCTARDIR/$PATCHFILE3 | patch -s -p1
zcat $SRCTARDIR/$PATCHFILE4 | patch -s -p1

patch -p1 -s << 'EO_PATCH' &&
--- dosemu-0.53.57/Makefile	Sat Apr  1 13:51:45 1995
+++ /tmp/Makefile	Sat Apr  1 13:55:31 1995
@@ -103,3 +103,3 @@
 # Uncomment the following if you still have your UUCP locks in /usr/spool/uucp
-PATH_LOCKD = -DPATH_LOCKD=\"/usr/spool/uucp\"
+PATH_LOCKD = -DPATH_LOCKD=\"/var/spool/uucp\"
 # Uncomment the following if you your UUCP locks in /var/locks

EO_PATCH

sh tools/kversion.sh  /usr/src/linux .
make all

%doc doc/[A-Z]*
# %doc doc/DOSEMU-HOWTO.txt README.CDROM README.X README.ncurses README.video
# %doc doc/DANG* doc/DPR doc/EMUsuccess.txt

* make install
* install -m 644 -o root -g system dosemu.xpm $ROOTDIR/usr/X386/include/pixmaps
* cd doc
* rm -f dosemu.info
* makeinfo dosemu.texinfo
* install -m 644 dosemu.info* $ROOTDIR/usr/info
# * rm -f $ROOTDIR/usr/info/dosemu.info*.gz
# * gzip -f9 $ROOTDIR/usr/info/dosemu.info*
* echo 'Add dosemu to you Emacs-Info-Dir.'
* install -m 644 -o root -g system dos.1 $ROOTDIR/usr/man/man1
* echo 'Copy examples/config.dist into /etc/dosemu.conf and edit that file'
* echo 'Add all users that are allowed to run dosemu to /etc/dosemu.users'
exit
# * usr/lib/dosemu
