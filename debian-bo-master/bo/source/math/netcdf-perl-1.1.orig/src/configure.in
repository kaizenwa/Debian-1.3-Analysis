dnl Process this file with GNU autoconf(1) to produce a configure script.
dnl
AC_INIT(netCDFPerl.1)
UC_INIT_NOPORT()

prefix=/usr/local
NP_PROG_PERL
NP_MANDIR_PERL
prefix=$PERL_MANDIR/..

UC_PROG_CC

UC_MAKEFILE(port/Makefile)
UC_MAKEFILE(port/master.mk)

UC_CUSTOMIZE

UC_DEFAULT(PORT_HEADERS, )
UC_DEFAULT(PORT_MANIFEST, )
UC_DEFAULT(PORT_SUBDIRS, )

UC_PROG_NEQN
UC_PROG_TBL
UC_PROG_TAR

UC_CPP_NETCDF
UC_LIB_NETCDF

UC_VERSION

UC_FTPDIR(pub/netcdf-perl)

dnl Workaround for perl extension build procedures not obtaining unbundled
dnl library when building under SunOS 4 and using acc(1):
dnl
case `uname -s` in
    SunOS)
	case `uname -r` in
	    4*)
		cc=`/usr/ucb/which cc`
		case $cc in
		    *SC*)
			dir=`echo $cc | sed 's:\(.*SC[[^/]]*\)\(/.*\):\1:'`
			LIBS="${LIBS-} -L$dir/lib -lansi"
			AC_SUBST(LIBS)
			;;
		esac
		;;
	esac
	;;
esac

UC_FINISH(Makefile perl/Makefile.PL)
