# Concept - the program is invoked by the LPRng lpd as the banner printer
# It is passed a set of arguments as follows,  or can read an input line
# with a set of options
#
#  PostScript Banner Printer
#  
#  Called with:
#  psbanner banner [-FLAGvalue]* [accountingfile]
#  
#   Important flags:                 Postscript Variable
#    -jnumber   - job number          /Seq
#    -Jbanner   - banner              /Job
#    -hhost     - host                /Host
#    -Cclass    - job class           /Class
#    -nuser     - user                /User
#    -tdate      - date               /Date
#    -Lname     - name                /Name
#  
#  Example:
#  
#  banner -Pt1 -w80 -l66 -x0 -y0 -Ff
#      -kcfA684taco.sdsu.edu -Lpapowell -J../VERSION -CA
#      -npapowell -htaco.sdsu.edu -Htaco.sdsu.edu
#      -d/tmp/LPD/t1/dfA684 taco.sdsu.edu accnt
#  
# Input Line: consists of the Seq:, Job:, ... words followed by values on
# one of more line.
#  You should define
#      :bl= Seq\: $j Job\: $-J Host\: $-H Seq\: $-j Class\: $-C User\: $-n \
#            Date\: $-t
#
#  Output needed:
#  
#  %!PS-Adobe-2.0
#  /Seq (number) def
#  /Job (banner) def  (with '()\' escaped )
#  /Host (HOST) def  
#  /Class (CLASS) def
#  /User (USER) def
#  /Date (DATE) def
#  /Name (NAME) def
#   < followed by the contents of the banner file >
# These variables are used by the banner printing script to
# produce output.
##
# ----------- start version 1 ------------
## echo debugging -- "$0" "$@" 1>&2
#
number=
banner=
host=
class=
user=
date=`date`
name=
args="$*"
while test $# != 0
do  case "$1" in
    -j*) number=$1 ;;
	-J*) banner=$1 ;;
	-h*) host=$1; if [ "$1" = "-h" ]; then shift; host=$1; fi ;;
	-C*) class=$1 ;;
	-n*) user=$1; if [ "$1" = "-n" ]; then shift; user=$1; fi ;;
	-t*) date=$1 ;;
	-L*) name=$1 ;;
    esac
    shift
done
# now strip off the leading -? tags
strip () {
	v=`echo "X$2" \
		| sed -e 's/^X//' -e 's/^-.//' -e 's/[()\\]/\\\\&/g' -e 's/.*/(&)/'`;
	echo "$1" "$v" def;
}
echo '%!PS-Adobe-2.0'
echo "%% $0 $args"
strip "/Seq" "$number" ;
strip "/Job" "$banner" ;
strip "/Host" "$host" ;
strip "/Class" "$class" ;
strip "/User" "$user" ;
strip "/Date" "$date" ;
strip "/Name" "$name" ;
#
## ----------- end version 1 ------------
## #
## # VERSION 2: read the input line
while read a; do
## echo debugging input --  "$a" 1>&2
	echo "%% input $a"
	echo "$a" | awk '
	{
		found = 0;
		for( i = 1; i <= NF; ++i ){
			l = length( $i );
			if( $i ~ /:$/ ){
				if( found ){
					printf "%s) def\n", value;
				}
				v = substr( $i,1, l-1 );
				printf "/%s (", v;
				found = 1;
				value = "";
			} else {
				if( length(value) > 0  ){
					value = value  " ";
				}
				for( j = 1; j <= l; ++j ){
					s = substr( $i, j, 1 );
					if( s == "(" ||  s == ")" || s == "\\" ){
						 s = "\\" s ;
					}
					value = value s;
				}
			}
		}
		if( found ){
			printf "%s) def\n", value;
		}
	}'
done
## ----------- end version 2 ------------
#
# VERSION 2: use the command line flags
#
#
# The following is the postscript file that uses the variables
