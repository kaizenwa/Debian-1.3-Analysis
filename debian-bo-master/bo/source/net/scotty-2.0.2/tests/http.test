if {[string compare test [info procs test]] == 1} then {source defs}

set VERBOSE 0

test http-1.1 {http server} {
    set port 1701
    while 1 {
        set error [catch {http server $port}]
        if {! $error} break
        incr port
    }
    expr [http server] == $port
} {1}

test http-1.2 {http bind} {
    http bind /foo get {return /dev/null}
} {return /dev/null}

test http-1.3 {http server} {
    http server ""
} {}

