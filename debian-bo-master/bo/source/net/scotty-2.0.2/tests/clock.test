if {[string compare test [info procs test]] == 1} then {source defs}

# set VERBOSE 1

test clock-1.1 {getclock command} {
    expr {[getclock "Sat May 14 12:29:34 1994"] % 3600}
} {1774}
test clock-1.2 {getclock command} {
    expr {[getclock "*** May 14 12:29:34 1994"] % 3600}
} {1774}

test clock-2.1 {getdate command} {
    set clock [getclock]
    expr {[getclock [getdate $clock]] == $clock}
} {1}
test clock-2.2 {getdate & getclock command} {
    set date [getdate]
    expr {[getdate [getclock $date]] == $date}
} {1}

test clock-3.1 {getclock wrong args} {
    list [catch {getclock Sat May 14 12:30:34 1994} msg] $msg
} {1 {wrong # args: should be "getclock ?date?"}}
test clock-3.2 {getclock invalid args} {
    list [catch {getclock "Sat FOO 14 12:30:34 1994"} msg] $msg
} {1 {unknown month "FOO"}}

test clock-5.1 {syslog} {
    syslog debug "scotty test suite"
} {}
test clock-5.2 {syslog} {
    list [catch {syslog debug} msg] $msg
} {1 {wrong # args: should be "syslog level message"}}
test clock-5.3 {syslog} {
    list [catch {syslog 5 "scotty test suite"} msg] $msg
} {1 {bad level "5": should be emergency, alert, critical, error, warning, notice, info, or debug}}
