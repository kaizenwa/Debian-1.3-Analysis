if {[string compare test [info procs test]] == 1} then {source defs}

# set VERBOSE 1

test event-1.1 {event command} {
    event bind
} {}
test event-1.2 {event command} {
    event bind foo bar
} {}
test event-1.3 {event command} {
    event bind foo
} {bar}
test event-1.4 {event command} {
    event bind
} {foo}
test event-1.5 {event command} {
    event bind HI +HO
} {}
test event-1.5 {event command} {
    event bind HI
} {HO}
test event-1.5 {event command} {
    event bind
} {foo HI}
test event-1.6 {event command} {
    event bind foo +rab
} {}
test event-1.6 {event command} {
    event bind foo
} "bar\nrab"
