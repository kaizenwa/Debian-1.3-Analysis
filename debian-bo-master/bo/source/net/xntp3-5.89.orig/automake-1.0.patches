     if ($relative_dir eq '.')
     {
 	# Rule to check whether a distribution is viable.
@@ -1274,6 +1279,14 @@
 	$output_rules .= '$(TAR) chozf $(distdir).tar.gz $(distdir)';
 	$output_rules .= "\n\t" . 'rm -rf $(distdir)' . "\n";
 
