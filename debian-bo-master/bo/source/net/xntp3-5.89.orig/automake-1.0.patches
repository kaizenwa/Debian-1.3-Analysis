@@ -439,6 +440,10 @@
 	{
 	    $use_dependencies = 0;
 	}
+	elsif (/distdir=(\S+)/)
+	{
+	    $use_distdir = "$1";
+	}
 	elsif (/[0-9]+\.?[0-9]+/)
