+++ automake-1.0.1/automake.in	Sat Jun 15 04:33:36 1996
@@ -422,6 +422,7 @@
 {
     return if ! &variable_defined ('AUTOMAKE_OPTIONS');
 
+    $use_distdir = '$(PACKAGE)-$(VERSION)';
     foreach (split (' ', $contents{'AUTOMAKE_OPTIONS'}))
     {
 	$options{$_} = 1;
@@ -431,7 +432,7 @@
 	}
