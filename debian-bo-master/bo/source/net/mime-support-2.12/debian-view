#! /bin/sh

echo "Info for debian package '$1':"
dpkg-deb --info $1
echo " "
echo -n "Do you wish to install this package now? (y/n) -->"
read yn

if [ "$yn" = "y" -o "$yn" = "Y" ]
then
	echo " "
	echo "Installing package..."
	dpkg --install $1
fi

echo " "
echo -n "Done.  Press <return> to continue: "
read
echo " "
