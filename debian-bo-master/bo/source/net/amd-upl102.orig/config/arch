# Figure out machine architecture
#

PATH=/bin:/usr/bin:/usr/ucb:/etc:/usr/sony/bin:${PATH}
export PATH

#
# First try to find a standard command
#
a=arch		# Sun compat
m=machine	# BSD compat
u=uname		# Sys5 compat

if [ -f /etc/$a -o -f /bin/$a -o -f /usr/ucb/$a -o -f /usr/bin/$a -o -f /usr/local/bin/$a ]
then
	PATH=/etc:/bin:/usr/ucb:/usr/bin:/usr/local/bin	exec $a $*
elif [ -f /etc/$m -o -f /bin/$m -o -f /usr/bin/$m -o -f /usr/ucb/$m -o -f /usr/sony/bin/$m ]
then
	PATH=/etc:/bin:/usr/bin:/usr/ucb:/usr/sony/bin exec $m
elif [ -f /etc/$u -o -f /bin/$u -o -f /usr/bin/$u ]
then
	ARCH="`uname`"
	case "$ARCH" in
		"HP-UX") MACH="`uname -m`"
			case "$MACH" in
			9000/3?? ) echo hp9000s300; exit 0;;
			9000/4?? ) echo hp9000s400; exit 0;;
			9000/7?? ) echo hp9000s700; exit 0;;
			9000/8?? ) echo hp9000s800; exit 0;;
			* ) echo hp9000; exit 0;;
			esac
			;;
		AIX*) MACH="`uname -m`"
			case "$MACH" in
			00*) echo ibm6000; exit 0;;
			10*) echo ibm032; exit 0;;
			20*) echo ibm032; exit 0;;
			esac
			;;
		A/UX) echo macII ; exit 0 ;;
		dgux) MACH="`uname -m`"
			case "$MACH" in
			AViiON) echo aviion; exit 0;;
			esac
			;;
		*) MACH="`uname -m`"
			case "$MACH" in
			IP[0-9]*) echo mips; exit 0;;
			i386) echo i386; exit 0;;
			mips) echo mips; exit 0;;

			# Concurrent Computer Corp. machines
			53/54/55) echo mc5000; exit 0;;
			6?00) echo mc6000; exit 0;;
			7?00) echo mc7000; exit 0;;
			8000) echo mc8000; exit 0;;

			*) ;;
			esac
			;;
	esac
fi

#
# Take a pot-shot at your machine architecture
#
echo "#	... No ARCH= option specified; dynamically determining architecture" >&2

case "`exec 2>/dev/null; head -2 /etc/motd`" in
*"HP-UX"*)		ARCH=hp9000;;
*"Iris"*)		ARCH=iris4d;;
*"Ultrix"*)		ARCH=vax;;
*"RISC iX"*)		ARCH=arm;;
*"Umax 4.2"*)		ARCH=encore;;
*"Alliant Concentrix"*)	ARCH=alliant;;
*"FPS Model 500"*)	ARCH=fps500;;
*"HCX/UX"*)		ARCH=harris;;
*)			ARCH=unknown;
			if [ -d /usr/include/caif ]; then
				ARCH=ibm032
			elif [ -f /bin/pyr ]; then
				if /bin/pyr; then
					ARCH=pyr
				fi
			elif [ -d /NextApps ]; then
				ARCH=next
			elif [ -f /etc/comply ]; then
				# Tex 4300 is essentially a sun 3.
				ARCH=sun3
			fi
			;;
esac

echo "#	... architecture appears to be \"${ARCH}\"" >&2
echo $ARCH

case "$ARCH" in
unknown) exit 1
esac

exit 0
