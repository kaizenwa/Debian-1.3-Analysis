#----------------------------------------------------------------------
#
#			INSTALLATION
#
#----------------------------------------------------------------------

install: install-binaries

install-binaries: libitix.a itixwish
	@for i in $(LIB_DIR) $(BIN_DIR) ; \
	    do \
	    if [ ! -d $$i ] ; then \
		echo "Making directory $$i"; \
		mkdir $$i; \
		chmod 755 $$i; \
		else true; \
		fi; \
	    done;
	@echo "Installing libitix.a"
	@$(INSTALL_DATA) libitix.a $(LIB_DIR)/libitix4.0.a
	@$(RANLIB) $(LIB_DIR)/libitix4.0.a
	@echo "Installing itixwish"
	@$(INSTALL_PROGRAM) itixwish $(BIN_DIR)/itixwish4.0

