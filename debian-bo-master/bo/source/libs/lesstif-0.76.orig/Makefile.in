SHELL=/bin/sh

@SET_MAKE@

prefix=@prefix@
exec_prefix=@exec_prefix@
subdirs=@subdirs@
cleandirs=@cleandirs@

all:
	@for i in ${subdirs}; do \
          echo Making all in $$i ; \
	  (cd $$i && ${MAKE} all) || exit 1;\
        done

install:
	for i in ${subdirs}; do \
	  echo Installing in $$i ; \
          (cd $$i && ${MAKE} install) || exit 1;\
        done

depend:
	for i in ${subdirs}; do \
	  echo Depending in $$i ; \
          (cd $$i && ${MAKE} depend) || exit 1;\
        done

clean:
	for i in ${cleandirs}; do \
	  echo Cleaning in $$i ; \
          (cd $$i && ${MAKE} clean) || exit 1;\
        done

#
# clean everything but configure
#
distclean:
	for i in ${cleandirs}; do \
	  echo DistCleaning in $$i ; \
          (cd $$i && ${MAKE} distclean) || exit 1;\
        done
	rm -f config.cache config.status config.log include/LTconfig.h \
		conftest conftest.c
	find . -name Makefile -exec rm {} \; -print

#
# if you do a maintainer-clean, you had better understand
# autoconf and autoheader
#
maintainer-clean:
	for i in ${cleandirs}; do \
	  echo DistCleaning in $$i ; \
          (cd $$i && ${MAKE} distclean) || exit 1;\
        done
	rm -f config.cache config.status config.log include/LTconfig.h \
		conftest conftest.c configure include/LTconfig.h.in
	find . -name Makefile -exec rm {} \; -print
