.SUFFIXES: .motif

XM_LIBRARY=-lMrm -lXm
XT_LIBRARY=-lXt
X_LIBRARY=-lX11
R6_LIBS=@R6libs@

x_includes=             @x_includes@
x_libraries=		@x_libraries@ ${XT_LIBRARY} ${X_LIBRARY} ${R6_LIBS}
lesstif_libraries=	@build_lesstif_libraries@
motif_libraries=	@motif_libraries@ ${XM_LIBRARY}

CC=@CC@
CFLAGS=-I$(srcdir)/../../include ${x_includes} @CFLAGS@
SRCDIR_SRCS=@srcdir_src_pat_subst@

all: ${TESTS}

motif-tests: ${MOTIFTESTS}

install:

depend: ${SRCDIR_SRCS}
	makedepend -- ${CFLAGS} -- ${SRCDIR_SRCS}

clean:
	rm -f ${OBJS} ${TESTS} ${MOTIFTESTS} *~ core *.bak *.BAK

.o:
	${CC} -o ${@} $< ${lesstif_libraries} ${x_libraries}

.o.motif:
	${CC} -o ${@} $< ${motif_libraries} ${x_libraries}

@test_depend_xm@
@test_depend_mrm@


@depend_xm_shared@ ../../libXm/libXm.a::
	(cd ../../libXm && ${MAKE} $(@:../../libXm/%=%)) || exit 1

@depend_mrm_shared@ ../../libMrm/libMrm.a::
	(cd ../../libMrm && ${MAKE} $(@:../../libMrm/%=%)) || exit 1

.NO_TESTS_YET:
	@touch .NO_TESTS_YET

