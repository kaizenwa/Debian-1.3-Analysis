SHELL=/bin/sh

@SET_MAKE@

subdirs = arrowbg arrowbutton baseclass bulletinboard cascadebutton \
cascadebuttong cmap combobox command cutpaste dialogs drag_drop drag_help \
drag_icon drag_move drag_pixmaps drag_simple dynamic_drag drawingarea \
drawnbutton dsscale extobj filesb fonts form frame geometry imagecache \
international label labelg list mainw megabutton menushell messagebox \
misc mwm newtoggleb panedw protocols pushbg pushbutton region reptype resind \
resconvert rowcolumn scale screen scrollbar scrolledwindow selections \
selectionbox separator sepg smartmb spinbutton tearoff text textf \
togglebg togglebutton togglebplus tracking traversal vasimple vendor \
virtualkeys xmos xmstring

all:
	@for i in ${subdirs}; do \
          echo Making all in $$i ; \
	  (cd $$i && ${MAKE} all) || exit 1;\
        done

motif-tests:
	@for i in ${subdirs}; do \
          echo Making motif-tests in $$i ; \
	  (cd $$i && ${MAKE} motif-tests) || exit 1;\
        done

depend:
	for i in ${subdirs}; do \
	  echo Depending in $$i ; \
	  (cd $$i && ${MAKE} depend) || exit 1;\
	done

install:

clean:
	for i in ${subdirs}; do \
	  echo Cleaning in $$i ; \
          (cd $$i && ${MAKE} clean) || exit 1;\
        done

distclean: clean
	rm test.Makefile
