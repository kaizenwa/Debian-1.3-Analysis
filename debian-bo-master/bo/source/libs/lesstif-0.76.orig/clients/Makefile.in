SHELL=/bin/sh

@SET_MAKE@

subdirs = lib xmbind mwm uil

all:
	@for i in ${subdirs}; do \
          echo Making all in $$i ; \
	  (cd $$i && ${MAKE} all) || exit 1;\
        done

motif-clients:
	@for i in ${subdirs}; do \
          echo Making motif-clients in $$i ; \
	  (cd $$i && ${MAKE} motif-clients) || exit 1;\
        done

depend:
	for i in ${subdirs}; do \
	  echo Depending in $$i ; \
	  (cd $$i && ${MAKE} depend) || exit 1;\
	done

install:
	@for i in ${subdirs}; do \
          echo Installing in $$i ; \
	  (cd $$i && ${MAKE} install) || exit 1;\
        done

clean:
	for i in ${subdirs}; do \
	  echo Cleaning in $$i ; \
          (cd $$i && ${MAKE} clean) || exit 1;\
        done

distclean: clean
	rm client.Makefile
