srcdir=@srcdir@
VPATH=$(srcdir)

CC=@CC@
LEX=@LEX@
LEXLIB=@LEXLIB@
CFLAGS=-I.
TOOL=typelist

OBJS=typelist.o

all: typelist

install:
	echo "Nothing to do in scripts for install."

depend:
	echo "Nothing to do in scripts for depend."

typelist: $(OBJS)
	$(CC) -o ${@} ${OBJS} ${LEXLIB}

typelist.o:	$(srcdir)/typelist.c

clean:
	rm -f *.o $(srcdir)/typelist.c typelist

distclean: clean

$(srcdir)/typelist.c: $(srcdir)/typedefs.l
	cd $(srcdir) && $(LEX) -v typedefs.l
	mv -f $(srcdir)/lex.yy.c $(srcdir)/typelist.c
