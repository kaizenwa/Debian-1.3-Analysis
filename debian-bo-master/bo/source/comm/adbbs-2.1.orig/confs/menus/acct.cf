option		Turn Off Fingering
prog		/bin/touch ~/.nofinger 
mkey		F

option		Turn On Fingering
prog		/bin/rm ~/.nofinger
mkey		T

option		Edit Your Plan
prog		/usr/bin/pico ~/.plan
mkey		P

option		Edit Your Sig File
prog		/usr/bin/pico ~/.signature
mkey		S

option		Change Your Prompt(s)
prog		cprom
mkey		C

option		Change Your Term. Type
prog		ttype
mkey		T

option		Return To Main Menu
menu		main
mkey		R

