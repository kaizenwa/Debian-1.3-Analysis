SHELL=/bin/sh
srcdir=@srcdir@
VPATH=@srcdir@

SUBDIRS=libXg libframe libmsg wily

all:
	for i in $(SUBDIRS); do \
		(cd $$i; $(MAKE) $(MFLAGS) $@); \
	done
install:	all
	cd wily; $(MAKE) $(MFLAGS) install
clean:
	for i in $(SUBDIRS); do \
		(cd $$i; $(MAKE) $(MFLAGS) $@); \
	done
nuke:
	for i in $(SUBDIRS); do \
		(cd $$i; $(MAKE) $(MFLAGS) $@); \
	done
	-rm wily.* config.log
