\newpsfamily[.985]{courier}{
  {m}{n}{pcrr7t},          %Courier
  {bx}{n}{pcrb7t},         %Courier-Bold
  {m}{it}{pcrro7t},        %Courier-Oblique
  {bx}{it}{pcrbo7t}}       %Courier-BoldOblique

