dnl Process this file with autoconf to produce a configure script.
AC_INIT(append.c)
AC_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_LN_S

dnl Checks for libraries.

dnl Checks for header files.
AC_HEADER_DIRENT
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h limits.h sys/file.h sys/ioctl.h sys/time.h unistd.h stdlib.h strings.h string.h sys/mtio.h pwd.h grp.h utime.h sys/utime.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_STRUCT_TM

dnl Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_HEADER_MAJOR
AC_TYPE_SIGNAL
AC_TYPE_OFF_T
AC_TYPE_UID_T
AC_TYPE_MODE_T
AC_TYPE_GETGROUPS
AC_FUNC_VFORK
AC_CHECK_FUNCS(mkdir rmdir strcspn strdup strerror stricmp getopt memcpy memset getpwnam getgrnam getuid getgid link chown strchr strftime strcasecmp)

AC_OUTPUT(Makefile)
