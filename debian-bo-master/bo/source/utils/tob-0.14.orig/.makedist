#!/bin/sh

echo "Making tob distribution.."

VER=`grep '^VER=' tob | sed 's/.*=//g'`
echo "Version: $VER"

echo "Copying docs.."
cp /imports/beatrix/home/http/docs/programs/tob.ps.gz doc
cp /imports/beatrix/home/http/docs/programs/tob.txt.gz doc
cp -p /usr/local/bin/afio* .

echo "Making tar.gz.."
cd ..
tar -c -v -z -f tob-$VER.tar.gz tob
cd tob

echo "Uploading to ftp.."
ftp -n << ENDFTP
    open ftp
    user ftp karel@
    cd /pub/incoming/general
    put ../tob-$VER.tar.gz tob-$VER.tar.gz
    put tob.lsm
    quit
ENDFTP

echo "Cleaning up.."
rm doc/tob.ps.gz doc/tob.txt.gz afio*

echo "Done, remember to put archives on ftp from pub/general/incoming to"
echo "/pub/unix!"
