#! /bin/sh
# mkpdir dir ... - make directory and (recursively) parents

# =()<. ${NEWSCONFIG-@<NEWSCONFIG>@}>()=
. ${NEWSCONFIG-/etc/news/bin/config}

PATH=$NEWSCTL/bin:$NEWSBIN:$NEWSPATH ; export PATH
umask $NEWSUMASK

status=0
for dir
do
	mkdir "$dir" 2>/dev/null
	if test ! -d "$dir"
	then
		mkpdir "`echo $dir | sed 's;/[^/]*$;;'`"
		mkdir "$dir"
		if test ! -d "$dir"
		then
			status=1
		fi
	fi
done
exit $status
