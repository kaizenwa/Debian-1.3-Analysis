#!/bin/sh

# ripped off from the trn version.
# maybe this common function should be stuck in a common script?

set -e
cd /etc

test -f news/server && exit 0

if ! test -d news
then
	mkdir news
	chown news.news news
	chmod 2775 news
fi

echo -n \
'What news server (NNTP server) should I use for reading
 - enter its full name: '

read server

echo $server >news/server
