'SHELL = /bin/sh

LANGUAGE=it
VERSION=3.4.1
IMAN=./man
IMANDIR=/usr/local/man/$(LANGUAGE)/man1
DOCDIR=/usr/doc/suck-$(VERSION)

INSTALL = @INSTALL@

MANPGS = $(IMAN)/suck.1 $(IMAN)/lpost.1 $(IMAN)/rpost.1 $(IMAN)/testhost.1 README

installiman: $(MANPGS)
	$(INSTALL) -d $(IMANDIR)
	$(INSTALL) -d $(DOCDIR)
	$(INSTALL) -m 644 $(IMAN)/suck.1     $(IMANDIR)
	$(INSTALL) -m 644 $(IMAN)/lpost.1    $(IMANDIR)
	$(INSTALL) -m 644 $(IMAN)/rpost.1    $(IMANDIR)
	$(INSTALL) -m 644 $(IMAN)/testhost.1 $(IMANDIR)
	$(INSTALL) -m 644 README $(DOCDIR)
clean:
	rm -f *[~%] core
