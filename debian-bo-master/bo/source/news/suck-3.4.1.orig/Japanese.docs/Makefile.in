SHELL=/bin/sh

# 必要に応じてインストール先のディレクトリを変えてください。
VERSION=3.4.1
JMANDIR=/usr/man/ja_JP.ujis/man1
DOCDIR=/usr/doc/suck-3.4.1
PREFIX = @prefix@/lib

INSTALL = @INSTALL@

MANPGS = suck.1J lpost.1J rpost.1J testhost.1J README

installjman: $(MANPGS)
	$(INSTALL) -m 644 suck.1J     $(JMANDIR)
	$(INSTALL) -m 644 lpost.1J    $(JMANDIR)
	$(INSTALL) -m 644 rpost.1J    $(JMANDIR)
	$(INSTALL) -m 644 testhost.1J $(JMANDIR)
	$(INSTALL) -m 644 README      $(DOCDIR)
	$(INSTALL) -m 644 phrases.japanese $(PREFIX)
clean:
	rm -f *[~%] core
