#!/bin/sh
set -e

if [ "$1" = "remove" ] \
    && [ -f /etc/apache/httpd.conf ]
then
    echo Removing apache modules from Apache configuration file.
    sed -e "/\/usr\/lib\/apache\/modules\/mod_block.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_counter.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_simultaneous.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_sp.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_speling.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_trailer.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_uri_remap.so/d" \
	-e "/\/usr\/lib\/apache\/modules\/mod_xinclude.so/d" \
	/etc/apache/httpd.conf > /tmp/$$
    mv /tmp/$$ /etc/apache/httpd.conf
fi
