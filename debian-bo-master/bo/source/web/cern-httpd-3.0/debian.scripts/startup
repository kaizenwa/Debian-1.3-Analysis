#!/bin/sh
# start or stop the http daemon
test -f /usr/sbin/cern-httpd || exit 0

case "$1" in
start)	start-stop-daemon --start --verbose --exec /usr/sbin/cern-httpd ;;
stop)	grep -Eqi '^\W*port\W+[[:digit:]]+' /etc/cern-httpd.conf \
           || grep -Eqi '^\W*servertype\W+standalone+' /etc/cern-httpd.conf \
           && start-stop-daemon --stop  --verbose --exec \
                   /usr/sbin/cern-httpd ;;
*)	echo "Usage: /etc/init.d/cern-httpd start|stop"; exit 1 ;
esac

exit 0

